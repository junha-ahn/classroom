<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />

  <script src="https://cdn.jsdelivr.net/npm/vue"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script type="text/javascript" src="/javascripts/index.js"></script>
</head>

<body>

  <div id="app">
    <header>
      <% include ./header %>
    </header>

    <main>
      학생 <input type="checkbox" v-model="joinForm.is_student" true-value="1" false-value="0">
      {{ joinForm.is_student == 1 ? '학생입니다' : '교직원입니다' }}
      <br/>
      캠퍼스 : 
      <select v-model="joinForm.campus_id"  @change="replaceBuildings()">
        <option v-for="(campus, i) in campuses" v-bind:value="campus.campus_id" :key="i">
          {{ campus.name }}
        </option>
      </select> 
      <span>Campus ID: {{ joinForm.campus_id }}</span>
      <br/>
      빌딩 : 
      <select v-model="joinForm.building_id">
        <option v-for="(building, j) in buildings" v-bind:value="building.building_id" :key="j">
          {{ building.name }}
        </option>
      </select>
      <span>Building ID: {{ joinForm.building_id }}</span>
      <br/>
      이메일 : <input v-model="joinForm.email" type="email">
      <br/>
      비밀번호 : <input v-model="joinForm.password" type="password">
      <br/>
      이름 :  <input v-model="joinForm.name" type="text">
      <br/>
      전화번호 :  <input v-model="joinForm.phone" type="text">
      <br/>
      학번 :  <input v-model="joinForm.student_number" type="text">
      <br/>
      <button @click="join()">가입</button>
    </main>
  </div>

  <script>
    var global = makeGlobal();
    var app = new Vue({
      el: '#app',
      data: function () {
        return {
          campuses : <%-JSON.stringify(campuses) %>,
          buildings: [],
          joinForm: {
            is_student:1,
            campus_id:null,
            building_id:null,
            campus_name:null,
            email:null,
            password:null,
            name:null,
            phone:null,
            student_number:null,
          }
        }
      },
      methods: {
        replaceBuildings: function(event) {
          this.buildings = this.campuses[this.joinForm.campus_id].building_results;
          this.joinForm.building_id = null;
        },
        join: function () {
          global.ajax({
            url: '/auth/join',
            type: 'POST',
            data: app.joinForm
          },
          function(data, status) {
            alert(data.message);
          },
          function(message, status, data) {
            alert(message);
          });
        }
      }
    })
  </script>

</body>

</html>