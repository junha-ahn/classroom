<% include ./sub/header %>
      <button type="button" @click="_user">유저 채우기</button>
      <button type="button" @click="_admin">관리자 채우기</button>
      <form v-on:submit="login">
        <div class="form-inline">
          <label>이메일 주소</label>
          <input v-model="loginForm.email" type="email" class="form-control" placeholder="이메일을 입력하세요">
        </div>
        <div class="form-inline">
          <label>암호</label>
          <input v-model="loginForm.password" type="password" class="form-control"placeholder="암호">
        </div>
        <button type="submit" class="btn btn-primary">로그인</button>
      </form>
    </main>
    
    <footer>
      <% include ./sub/footer %>
    </footer>
  </div>

  <script>
    var global = makeGlobal();
    var app = new Vue({
      el: '#app',
      data: function () {
        return {
          page_name: 'login',
          is_user: <%- is_user %>,
          is_admin: <%- is_admin %>,
          loginForm: {
            email:null,
            password:null,
          },
        }
      },
      methods: {
        _user : function() {
          this.loginForm.email = "email@email.com"
          this.loginForm.password = "password"
        },
        _admin : function() {
          this.loginForm.email = "admin@email.com"
          this.loginForm.password = "password"
        },
        logout: function () {
          global.ajax({
            url: '/auth/logout',
            type: 'GET',
            data: null,
          },
          function(data, status) {
            alert(data.message);
          },
          function(message, status, data) {
            alert(message);
          });
        },
        login(e) {
          e.preventDefault();
          global.ajax({
            url: '/auth/login',
            type: 'POST',
            data: app.loginForm
          },
          function(data, status) {
            alert(data.message);
            location.href='/'
          },
          function(message, status, data) {
            alert(message);
          });
        },
      }
    })
  </script>

</body>

</html>