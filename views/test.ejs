<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />

  <script type="text/javascript" src="/javascripts/index.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vue"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>

<body>

  <div id="app">
    <header>
      <% include ./header %>
    </header>

    <main>
    
      <button @click="logout()">로그아웃</button>
      <h1>안녕하세요</h1>

      이메일 : <input v-model="loginForm.email" type="email">
      비밀번호 : <input v-model="loginForm.password" type="password">
      <button @click="login()">로그인</button>

      <br/>
      <br/>
      <br/>
      
      이메일 : <input v-model="joinForm.email" type="email">
      비밀번호 : <input v-model="joinForm.password" type="password">
      이름 :  <input v-model="joinForm.name" type="text">
      <button @click="join()">가입</button>
    </main>
  </div>

  <script>
    var global = makeGlobal();
    var app = new Vue({
      el: '#app',
      data: function () {
        return {
          loginForm: {
            email:null,
            password:null,
          },
          joinForm: {
            email:null,
            password:null,
            name:null,
          }
        }
      },
      methods: {
        logout: function () {
          global.ajax({
            url: '/auth/logout',
            type: 'GET',
            data: null,
          },
          function(data, status) {
            alert(data.message);
          },
          function(message, status, data) {
            alert(message);
          });
        },
        login: function () {
          global.ajax({
            url: '/auth/login',
            type: 'POST',
            data: app.loginForm
          },
          function(data, status) {
            alert(data.message);
          },
          function(message, status, data) {
            alert(message);
          });
        },
        join: function () {
          global.ajax({
            url: '/auth/join',
            type: 'POST',
            data: app.joinForm
          },
          function(data, status) {
            alert(data.message);
          },
          function(message, status, data) {
            alert(message);
          });
        }
      }
    })
  </script>

</body>

</html>