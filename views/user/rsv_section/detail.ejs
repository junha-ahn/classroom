<div>
    <form v-on:submit="detailSubmit">

      <div class="pack_div clearfix">
        <div class="div_left">
          <label>학과</label>
        </div>
        <div class="div_right">
          <select class="form-control" v-model="formData.department_id" :disabled="menu_step != 'detail'" @change="changeDepartment">
            <option v-for="(department, i) in department_results" v-bind:value="department.department_id" :selected="formData.department_id == department.department_id" :key="i"
            v-bind:value="department.department_id">
              {{ department.name }}
            </option>
          </select>
        </div>
      </div>

      <div class="pack_div clearfix">
        <div class="div_left">
          <label>스터디</label>
        </div>
        <div class="div_right">
          <select class="form-control" v-model="formData.study_group_id" :disabled="formData.department_id == null || menu_step != 'detail'">
            <option v-for="(study_group, i) in study_group_results" :key="i" v-bind:value="study_group.study_group_id">
              {{ study_group.name }}
            </option>
          </select>
        </div>
      </div>

      <div class="form-inline pack_div clearfix">
        <div class="div_left">
          <label>제목</label>
        </div>
        <div class="div_right">
          <input v-model="formData.title" type="text" class="form-control" placeholder="제목을 입력해주세요" :disabled="menu_step != 'detail'">
        </div>
      </div>

      <div class="form-inline pack_div clearfix">
        <div class="div_left">
          <label>인원</label>
        </div>
        <div class="div_right">
          <div class="text-left">
            <span>학생</span>
            <input v-model="formData.student_count" type="number" class="form-control" placeholder="예상 참여 인원을 입력해주세요" :disabled="menu_step != 'detail'">
          </div>
          <div class="text-left">
            <span>비학생</span>
            <input v-model="formData.non_student_count" type="number" class="form-control" placeholder="예상 참여 인원을 입력해주세요" :disabled="menu_step != 'detail'">
          </div>
        </div>
      </div>

      <div class="form-inline pack_div clearfix">
        <div class="div_left">
          <label>대표</label>
        </div>
        <div class="div_right">
          <div class="text-left">
              <span>성명</span>
              <input v-model="formData.representative_name"  v-bind:text="formData.representative_name" type="text" class="form-control" placeholder="대표자 성명을 입력하세요" :disabled="menu_step != 'detail'">
          </div>
          <div class="text-left">
              <span>전화번호</span>
              <input v-model="formData.representative_phone" v-bind:text="formData.representative_phone" type="text" class="form-control" placeholder="대표자 연락처를 입력하세요" :disabled="menu_step != 'detail'">
          </div>
        </div>
      </div>

      <div class="form-inline pack_div clearfix">
        <div class="div_left">
          <label>사용목적</label>
        </div>
        <div class="div_right">
          <textarea v-model="formData.description" class="form-control" rows="3" :disabled="menu_step != 'detail'"></textarea>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">{{menu_step == 'last' ? '제출하기' : '다음으로'}}</button>
    </form>
</div>
